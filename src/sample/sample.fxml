<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>

<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Border?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.control.TextField?>
<AnchorPane prefWidth="1000" minHeight="600" xmlns="https://javafx.com/javafx" stylesheets="@main.css"
            xmlns:fx="https://javafx.com/fxml" fx:controller="sample.Controller" id="base">
    <children>
        <JFXDrawer fx:id="drawer" AnchorPane.topAnchor="0" direction="LEFT"
                   AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"/>
        <JFXHamburger fx:id="hamburger" prefWidth="60" prefHeight="40"
                      AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" id="hamburger">
            <padding>
                <Insets left="2" top="2"/>
            </padding>
        </JFXHamburger>
        <SplitPane AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" layoutX="225.0" dividerPositions="0.7"
                   fx:id="split" id="split" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="60.0">
            <TableView fx:id="studentsTable" SplitPane.resizableWithParent="true">
                <columns>
                    <TableColumn text="ID"/>
                    <TableColumn text="Name"/>
                    <TableColumn text="Class"/>
                    <TableColumn text="Address"/>
                    <TableColumn text="Phone Number"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <GridPane id="admin" fx:id="adminTools" layoutY="50" alignment="CENTER" vgap="25">
                <padding>
                    <Insets left="10" right="10"/>
                </padding>
                <VBox alignment="CENTER">
                    <Label text="Admin Panel" GridPane.rowIndex="0" alignment="CENTER" id="adminTitle">
                        <effect>
                            <Glow level="1"/>
                        </effect>
                    </Label>
                </VBox>
                <VBox spacing="45" alignment="CENTER" GridPane.rowIndex="1" minWidth="250">
                    <padding>
                        <Insets left="30" right="30" top="50" bottom="50"/>
                    </padding>
                    <TextField promptText="student name" styleClass="fields">
                        <padding>
                            <Insets left="10"/>
                        </padding>
                    </TextField>
                    <TextField promptText="class name" styleClass="fields"/>
                    <TextField promptText="student address" styleClass="fields"/>
                    <TextField promptText="phone number" styleClass="fields"/>
                    <HBox alignment="CENTER" spacing="20">
                        <JFXButton text="Submit" styleClass="controls"/>
                        <JFXButton text="Reset" styleClass="controls"/>
                    </HBox>
                </VBox>
            </GridPane>
        </SplitPane>
    </children>
</AnchorPane>
