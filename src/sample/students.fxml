<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>

<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="https://javafx.com/javafx" stylesheets="@main.css"
            xmlns:fx="https://javafx.com/fxml" fx:controller="sample.Students" id="base">
    <left>
        <AnchorPane>
            <JFXDrawer fx:id="drawer" AnchorPane.topAnchor="0" direction="LEFT" visible="false"
                       AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"/>
            <JFXHamburger fx:id="hamburger" prefWidth="40" prefHeight="40"
                          AnchorPane.topAnchor="0" id="hamburger">
                <padding>
                    <Insets left="5" top="2"/>
                </padding>
            </JFXHamburger>
        </AnchorPane>
    </left>
    <center>
        <TableView fx:id="studentsTable">
            <columns>
                <TableColumn text="ID" fx:id="id"/>
                <TableColumn text="Name" fx:id="name"/>
                <TableColumn text="Class" fx:id="className"/>
                <TableColumn text="Address" fx:id="address"/>
                <TableColumn text="Phone Number" fx:id="phone"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <GridPane id="admin" fx:id="adminTools" layoutY="50" alignment="CENTER" vgap="25">
            <padding>
                <Insets left="10" right="10"/>
            </padding>
            <VBox alignment="CENTER">
                <Label text="Admin Panel" GridPane.rowIndex="0" alignment="CENTER" id="adminTitle">
                    <effect>
                        <Glow level="1"/>
                    </effect>
                </Label>
            </VBox>
            <VBox spacing="45" alignment="CENTER" GridPane.rowIndex="1" minWidth="250">
                <padding>
                    <Insets left="30" right="30" top="50" bottom="50"/>
                </padding>
                <TextField promptText="student's name" styleClass="fields">
                    <padding>
                        <Insets left="15"/>
                    </padding>
                </TextField>
                <TextField promptText="student's class" styleClass="fields">
                    <padding>
                        <Insets left="15"/>
                    </padding>
                </TextField>
                <TextField promptText="student's address" styleClass="fields">
                    <padding>
                        <Insets left="15"/>
                    </padding>
                </TextField>
                <TextField promptText="phone number" styleClass="fields">
                    <padding>
                        <Insets left="15"/>
                    </padding>
                </TextField>
                <Label fx:id="msg" />
                <HBox alignment="CENTER" spacing="20">
                    <JFXButton text="Submit" styleClass="controls"/>
                    <JFXButton text="Reset" styleClass="controls"/>
                </HBox>
            </VBox>
        </GridPane>
    </right>
</BorderPane>
